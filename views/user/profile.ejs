        <!-- Main Content -->
        <div class="col-md-9 main-content">
            <h2>Profile</h2>

            <!-- Profile Picture -->
            <div class="profile-image-container">
                <img src="<%= user.profileImage ? '/uploads/re-image/' + user.profileImage : '/images/default-profile.jpg' %>"  alt="Profile Picture" class="rounded-circle">
                <div class="ml-3">
                    <h5><%= user.name%></h5>
                    <p class="text-muted"><%= user.email%></p>
                </div>
            </div>

            <!-- Read-Only Info -->
            <div class="profile-info">
                <p><strong>Phone Number:</strong> <%= user.phone || '1234567890' %></p>

                <!-- Referral Code Section -->
                <p><strong>Your Referral Code:</strong> <%= user.referralCode || 'N/A' %></p>
                <button class="btn btn-sm btn-secondary" onclick="copyReferral()">Copy Referral Link</button>
