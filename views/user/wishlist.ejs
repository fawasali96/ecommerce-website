<%- include("../../views/partials/user/header") %>
<style>
   .product-name a {
  color: #000; 
  text-decoration: none;
}

.product-name a:hover {
  color: #ff6b6b; 
}


</style>
 <!-- Start Banner Area -->
 <section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h2>Wishlist</h2>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->



<main class="main">


   <br><br>

   <section class="mt-50 mb-50">
       <div class="container">
           <div class="row">
               <div class="col-12">
                   <div class="table-responsive">
                       <table class="table shopping-summery text-center clean">
                           <thead>
                               <tr class="main-heading">
                                   <th scope="col">Image</th>
                                   <th scope="col">Name</th>
                                   <th scope="col">Price</th>
                                   <th scope="col">Add to Cart</th>
                                   <th scope="col">Remove</th>
                               </tr>
                           </thead>
                           <tbody>

                                <%if(wishlist.length>0){%>

                                    <%for(let product of wishlist){%>
                             
                                       <tr id="wishlist-item-<%= product._id %>">
                                           <td class="image product-thumbnail">
                                               <img src="/uploads/re-image/<%= product.productImage[0] %>"
                                               style="width: 50px; height: 50px; object-fit: cover;" />
                                           </td>
                                           <td class="product-des product-name">
                                               <h5 class="product-name">
                                                   <a href="/productDetails?id=<%=product._id%>">
                                                      <%=product.productName%>
                                                   </a>
                                               </h5>
                                               <p class="font-xs">
                                                <%=product.category.name%>
                                                   <br />
                                                   <%=product.brand%>
                                                   
                                                  
                                               </p>
                                           </td>
                                           <td class="price" data-title="Price">â‚¹<span>
                                            <%=Math.round(product.salePrice)%>
                                          
                                           </span></td>
                                           <td class="text-center" data-title="Add to Cart">
                                               <a href="#" onclick="addToCart('<%=product._id%>')" class="btn btn-sm btn-success">Add to Cart</a>
                                           </td>
                                           <td class="action" data-title="Remove">
                                               <a class="btn btn-sm btn-danger" href="#" onclick="confirmRemove('<%=product._id%>')">
                                                   <i class="fi-rs-trash">Remove</i>
                                               </a>
                                           </td>
                                       </tr>
                                       <%}%>
                                       <%}else{%>
                                   <tr>
                                       <td colspan="5" class="text-center">
                                           <p class="lead mb-4">No items found in Wishlist</p>
                                       </td>
                                   </tr>
                                   <%}%>
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </section>
</main>
<%- include("../../views/partials/user/footer") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

function confirmRemove(productId) {
    Swal.fire({
        title: "Are you sure",
        text: " You wont be able to revert this",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor:"#3085d6",
        cancelButtonColor:"#d33",
        confirmButtonText:"Yes, remove it",
    }).then((result) => {
        window.location.href = `/removeFromWishlist?productId=${productId}`
    }) 
}

function addToCart(productId) {
    event.preventDefault();
    $.ajax({
        url: "/addToCart",
        method: "POST",
        data: {productId: productId,
            fromWishlist: true
        },
        success: (response) => {
            if(response.status) {
                Swal.fire({
                    title: "Added to cart",
                    text: response.message,
                    icon: "success",
                    timer: 2000
                });

                $("#wishlist-item-" + productId).remove();

                if ($("tbody tr").length === 0) {
                    $("tbody").html(`
                        <tr>
                            <td colspan="5" class="text-center">
                                <p class="lead mb-4">No items found in Wishlist</p>
                            </td>
                        </tr>
                    `);
                }

            } else {
                Swal.fire({
                    title: "Error",
                    text: response.message,
                    icon: "error",
                    timer: 2000
                });
            }
        },
        error: (error) => {
            console.error("AJAX Error:", error);
            Swal.fire({
                title: "Error",
                text: "There was an error adding the product to your cart",
                icon: "error",
                timer: 2000
            });
        }
    })
} 

</script>