                <a href="#" onclick="confirmLogout(event)" class="text-danger mt-4"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
            <!-- Main Content -->
            <div class="col-md-9 main-content">
                <h1 id="coupons-title">My Coupons</h1>
            
                <% if (coupons.length > 0) { %>
                    <% for(let i = 0; i < coupons.length; i++) { %>
                        <div class="coupon">
                <h2>
                    <span>ðŸŽ‰</span>Congratulations! â‚¹<%= coupons[i].offerPrice %> off your next purchase!
                     <% if (coupons[i].isReferral) { %>
                    <span class="badge">Referral Coupon</span>
                    <% } %>
                 </h2>

                            <p>Minimum Purchase Amount Should Be â‚¹<%= coupons[i].minimumPrice %></p>
                            <p>Expires On: <%= new Date(coupons[i].expireOn).toLocaleDateString('en-IN') %></p>
                            <div class="input-group">
                                <input type="text" value="<%= coupons[i].name %>" id="coupon<%= i %>" readonly>
                                <% if (!coupons[i].isUsed) { %>
                                    <button onclick="copyToClipboard('coupon<%= i %>')">Copy coupon</button>
                                <% } %>
                            </div>
                            <p class="<%= coupons[i].isUsed ? 'text-danger' : 'text-success' %>">
                                <%= coupons[i].usageMessage %>
                            </p>
                        </div>
                    <% } %>
                <% } else { %>
                    <p>No coupons available.</p>
                <% } %>
            </div>
        </div>
